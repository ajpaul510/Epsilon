 <body>
  <div class="content">

    <div class="left-column">
      <h6>Popular</h6>

      <button type="button" class="btn btn-sm" onclick="this.blur();"><img src="img/sidebar/flame.png" alt="flame icon hot topic" id="hot-topic"><strong>Hot</strong></button><br>

      <button type="button" class="btn btn-sm" onclick="this.blur();"><img src="img/sidebar/trending.png" alt="arrow icon trending" id="hot-topic"><strong>Trending</strong></button><br>

      <button type="button" class="btn btn-sm" onclick="this.blur();"><img src="img/sidebar/clock-icon.jpg" alt="clock icon fresh posts" id="hot-topic"><strong>Fresh</strong></button>
      <br>

      <!-- button to open the modal for UPLOADS -->
      <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#myModal">Upload</button>

      <!--  the modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

          <!-- modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h2>Post something new!</h2>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              <form method="post" enctype="multipart/form-data">

                <input type="file" name="file">
                <p>Now think of a witty caption...</p>
                <div class="form-group">
                  <label for="postCaption">Caption:</label>
                  <br>
                  <textarea name="caption" class="form-control" rows="5" id="caption" placeholder="Enter a caption for your post"></textarea>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>

              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>


      <div class="middle-column">
          {{# each cards}}
              <div class="card" style="width: 30rem;">
                  <img class="card-img-top" src={{img_path}} alt="Card image cap">
                  <div class="card-body">
                      <p class="user-profile">
                          <link class="card-subtitle mb-2 text-muted" href="user-profile">{{username}}</p>

                      <p class="card-text">{{caption}}</p>

                      <!-- UPVOTE DOWNVOTE -->
                      <div class="up-down-btn">
                          <button type="submit" class="btn up" id="upvote-btn" onclick="this.blur();">&#x2191;</button>
                          <input class="qty" name="qty" readonly="readonly" type="text" value="0" />
                          <button type="submit" class="btn down" id="downvote-btn" onclick="this.blur();">&#x2193;</button>
                      </div>

                      <script type="text/javascript">
                          $(function(){
                              $(".up").click(function(){
                                  var input = $(this).siblings('.qty');
                                  input.val(parseFloat(input.val()) + 1);
                              });
                              $(".down").click(function(){
                                  var input = $(this).siblings('.qty');
                                  input.val(parseFloat(input.val()) - 1);
                              });
                          });
                      </script>

                      <!-- Share on Twitter -->
                      <div class="bottom-right">
                          <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>
                          <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

                          <!-- Share on Gmail -->
                          <script src="https://apis.google.com/js/platform.js" async defer></script>
                          <g:plus action="share"></g:plus>
                      </div>
                  </div>
              </div>
          {{/each}}
      </div>


    <div class="right-column">
      <p>Username</p>

      <br>
      <img src="img/defaultpic.jpg" alt="img/derp.jpg" class="img-thumbnail">
      <br>


      <label for="imageUpload" class="btn btn-dark btn-block btn-outlined">Change Profile Pic</label>
      <input type="file" id="imageUpload" accept="image/*" style="display: none;">
      <br>


      <p>About</p>

      <textarea class="form-control" id="exampleFormControlTextarea1" rows="5">I am derp. I am soooo interesting. Look how I'm geekin' out. I'm so fitted. I'm on Gucci. I'm so pretty. I'm gon'get it. Watch me move!</textarea>
      <button type="button" class ="btn btn-primary btn-sm">Save Changes</button>
      <br>
      <br>

      <button type="button" class="btn btn-info btn-sm">Followers: {{followers}}</button>
      <button type="button" class="btn btn-info btn-sm">Following: {{following}}</button>

      <br>
      <br>

      {{#if signedin}}


        <button type="button" class="btn btn-warning btn-block">Change Password</button>

        <button type="button" class="btn btn-danger btn-block">Delete Account</button>


      {{/if}}
      <br>
      <br>




    </div>
  </div>


  <!-- //// Back to the top button //// -->
  <button onclick="topFunction()" id="top" title="Go to top">top</button>

  <script>
    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function() {
      scrollFunction()
    };

    function scrollFunction() {
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        document.getElementById("top").style.display = "block";
      } else {
        document.getElementById("top").style.display = "none";
      }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    }
  </script>


  <!-- //// End Back to the top button //// -->

  </div>
</body>
